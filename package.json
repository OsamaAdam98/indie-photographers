{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "./server/src/index.js",
  "scripts": {
    "start": "yarn run server:build && yarn run server:prod",
    "start:dev": "yarn run server:build && yarn run server:dev",
    "start:heroku": "yarn run server:build && yarn run delete:server && yarn run server:prod-heroku",
    "server": "nodemon",
    "server:build": "cd server && rm -rf dist && tsc",
    "server:dev": "node ./server/dist/server.js",
    "server:prod": "NODE_ENV=production node ./server/dist/server.js",
    "server:prod-heroku": "node dist/server.js",
    "delete:server": "mv server/dist/ . && rm -rf server/",
    "delete:client": "mv client/build/ . && rm -rf client/",
    "client": "cd client && yarn start",
    "build-client": "rm -rf build/ && cd client && yarn run build && mv build/ ../",
    "dev": "concurrently \"yarn run server\" \"yarn run client\"",
    "heroku-postbuild": "cd client && yarn && yarn build && cd .. && yarn run delete:client",
    "init-all": "yarn && cd client && yarn",
    "prod": "yarn run build-client && NODE_ENV=production yarn start"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/moment": "^2.13.0",
    "@types/mongodb": "^3.5.20",
    "@types/mongoose": "^5.7.22",
    "@types/node": "^14.0.11",
    "axios": "^0.19.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.26.0",
    "mongoose": "^5.9.18",
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "nodemon": "^2.0.4"
  },
  "engines": {
    "node": "12.x",
    "yarn": "1.x"
  }
}
