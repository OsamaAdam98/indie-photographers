{
  "name": "indie-photographers",
  "version": "1.0.0",
  "main": "dist/index.js",
  "repository": "https://github.com/osamaadam/indie-photographers.git",
  "author": "Osama Adam <osamaadam98@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "server:build": "cd server && rm -rf dist && tsc && cd ..",
    "client:build": "cd client && yarn build && cd ..",
    "dev": "concurrently \"yarn run server\" \"yarn run client\"",
    "server": "nodemon",
    "client": "cd client && yarn start",
    "start:dev": "yarn run server:build && yarn run server:dev",
    "server:dev": "node server/dist/server.js",
    "server:prod": "NODE_ENV=production node server/dist/server.js",
    "init-all": "yarn && cd client && yarn"
  }
}
